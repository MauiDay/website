---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/hero.astro';
import About from '../components/about.astro';
import Location from '../components/location.astro';
import CFS from '../components/cfs.astro';
import Sponsors from '../components/sponsors.astro';
import Speakers from '../components/speakers-js.astro';
import Schedule from '../components/schedule-js.astro';
import loadConfig from '../configLoader';

const config = await loadConfig();
---

<Layout>
	<Hero />
	<About />
	{config.hasCfs ? ( <CFS /> ) : <></>}
	{config.hasAnnouncedSpeakers ? ( <Speakers /> ) : <></>}
	{config.hasAnnouncedSchedule ? ( <Schedule /> ) : <></>}
	<Location />
	<Sponsors />
</Layout>
