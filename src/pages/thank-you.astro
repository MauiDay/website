---
import Layout from "../layouts/Layout.astro";
---

<Layout
  pageTitle="Thank you | .NET MAUI Day"
  pageDescription="Thanks for subscribing to the .NET MAUI Day newsletter."
  isStaticHeader={true}
>
  <section class="bg-white text-gray-600 text-md py-24">
    <div class="container max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl mb-6 text-brand-dark font-bold">
        Thank you for subscribing
      </h1>
      <p class="text-lg max-w-xl mx-auto">
        You're on the list. We'll keep you updated on speakers, schedule, and everything .NET MAUI Day.
      </p>
    </div>
  </section>
</Layout>
