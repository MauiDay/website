---
import Layout from "../../layouts/Layout.astro";
import { fetchAlbums, fetchAlbumImages, getAlbumThumbnail } from "../../data/gallery";

const albums = await fetchAlbums();

const albumsWithThumbnails = await Promise.all(
  albums.map(async (album) => {
    const images = await fetchAlbumImages(album.id);
    return { ...album, thumbnail: getAlbumThumbnail(album.id, images), imageCount: images.length };
  })
);
---

<Layout isStaticHeader={true} pageTitle="Gallery | .NET MAUI Day">
  <section class="bg-white py-16">
    <div class="container max-w-5xl mx-auto px-4">
      <div class="mb-12">
        <h1 class="text-4xl mb-4 text-brand-dark font-bold font-header">Gallery</h1>
        <p class="text-gray-600 text-md">Photos from our .NET MAUI Day events around the world.</p>
      </div>

      {albumsWithThumbnails.length === 0 ? (
        <p class="text-gray-500 italic">No photo albums available yet. Check back soon!</p>
      ) : (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {albumsWithThumbnails.map((album) => (
            <a href={`/gallery/${album.id}`} class="group block">
              <div class="overflow-hidden rounded-lg shadow-md aspect-[4/3] bg-gray-100">
                {album.imageCount > 0 ? (
                  <img
                    src={album.thumbnail}
                    alt={album.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center text-gray-400">
                    <i class="fa-solid fa-images text-4xl"></i>
                  </div>
                )}
              </div>
              <h3 class="mt-3 text-lg font-bold text-brand-dark font-header group-hover:text-brand-extra transition-colors">
                {album.title}
              </h3>
              <p class="text-sm text-gray-500">
                {new Date(album.date).toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric" })}
                {album.imageCount > 0 && ` Â· ${album.imageCount} photos`}
              </p>
            </a>
          ))}
        </div>
      )}
    </div>
  </section>
</Layout>
