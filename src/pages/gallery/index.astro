---
import Layout from "../../layouts/Layout.astro";
import { fetchAlbums, fetchAlbumImages, getAlbumThumbnail } from "../../data/gallery";

const albums = await fetchAlbums();

const albumsWithThumbnails = await Promise.all(
  albums.map(async (album) => {
    const images = await fetchAlbumImages(album.id);
    return { ...album, thumbnail: getAlbumThumbnail(album.id, images), imageCount: images.length };
  })
);
---

<Layout isStaticHeader={true} pageTitle="Gallery | .NET MAUI Day">
  <section class="bg-brand-dark py-24">
    <div class="container max-w-5xl mx-auto px-4 text-center">
      <p class="text-brand-extra font-bold mb-4 text-xl font-header uppercase">Our Memories</p>
      <h2 class="text-white text-4xl md:text-4xl uppercase font-header font-bold mb-4">Event Gallery</h2>
      <p class="text-white text-base text-md mb-12">
        Relive the moments from our .NET MAUI Day events around the world.
      </p>

      {albumsWithThumbnails.length === 0 ? (
        <p class="text-white text-md italic">No photo albums available yet. Check back soon!</p>
      ) : (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 text-left">
          {albumsWithThumbnails.map((album) => (
            <a href={`/gallery/${album.id}`} class="group block">
              <div class="overflow-hidden rounded-lg shadow-md aspect-[4/3] bg-brand-dark border border-white/10">
                {album.imageCount > 0 ? (
                  <img
                    src={album.thumbnail}
                    alt={album.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center text-gray-400">
                    <i class="fa-solid fa-images text-4xl"></i>
                  </div>
                )}
              </div>
              <h3 class="mt-3 text-lg font-bold text-white font-header group-hover:text-brand-extra transition-colors">
                {album.title}
              </h3>
              <p class="text-sm text-brand-light/70">
                {new Date(album.date).toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric" })}
                {album.imageCount > 0 && ` Â· ${album.imageCount} photos`}
              </p>
            </a>
          ))}
        </div>
      )}
    </div>
  </section>
</Layout>
