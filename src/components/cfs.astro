---
import loadConfig from "../configLoader";
const config = await loadConfig();
---

<section id="call-for-speakers" class="py-24 bg-brand-light relative">
  <div class="container max-w-5xl mx-auto px-4">
    <div class="flex flex-col lg:flex-row items-center gap-16">
      <div class="lg:w-1/2">
        <p
          class="text-brand-extra font-bold mb-4 text-xl font-header uppercase"
        >
          Have you considered speaking?
        </p>
        <h2
          class="text-brand-dark text-4xl md:text-4xl uppercase font-header font-bold mb-4"
        >
          Call for Speakers
        </h2>
        <p class="text-lg text-slate-600 mb-8 leading-relaxed">
          We're looking for passionate speakers to share their knowledge and
          experiences with the .NET MAUI community. Whether you're a seasoned
          presenter or a first-time speaker, we welcome your submissions on
          topics ranging from beginner tutorials to advanced architectural
          patterns. Help us inspire the next generation of cross-platform
          developers!
        </p>
        <a
          href={`${config.sessionizeCfsUrl}`}
          target="_blank"
          class="btn-gradient px-8 py-4 rounded-full font-bold text-white shadow-lg shadow-purple-500/30 hover:shadow-purple-500/50 transform hover:-translate-y-0.5 transition-all duration-300 inline-flex items-center gap-2 group"
        >
          <span>Submit a Talk</span>

        <span class="text-sm group-hover:translate-x-1 transition-transform">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-6" viewBox="0 0 24 24"><g fill="none"><path d="M24 0v24H0V0zM12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035q-.016-.005-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427q-.004-.016-.017-.018m.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093q.019.005.029-.008l.004-.014l-.034-.614q-.005-.019-.02-.022m-.715.002a.02.02 0 0 0-.027.006l-.006.014l-.034.614q.001.018.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01z"></path><path fill="currentColor" d="m15.06 5.283l5.657 5.657a1.5 1.5 0 0 1 0 2.12l-5.656 5.658a1.5 1.5 0 0 1-2.122-2.122l3.096-3.096H4.5a1.5 1.5 0 0 1 0-3h11.535L12.94 7.404a1.5 1.5 0 0 1 2.122-2.121Z"></path></g></svg>
        </span>
        </a>
      </div>
      <div class="lg:w-1/2 w-full">
        <div
          class="relative h-[400px] lg:h-[500px] w-full max-w-[500px] mx-auto"
        >
          <div
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-purple-50 rounded-full blur-3xl opacity-50 -z-10"
          >
          </div>
          <div class="grid grid-cols-3 gap-4 h-full">
            <div class="flex flex-col gap-4 pt-12">
              <div
                class="w-24 h-24 rounded-2xl overflow-hidden shadow-lg transform rotate-3 hover:rotate-0 transition-transform duration-300"
              >
                <img
                  alt="Speaker"
                  class="w-full h-full object-cover"
                  src="/images/speakers/mm.jpg"
                />
              </div>
              <div
                class="w-24 h-24 rounded-full overflow-hidden shadow-lg transform -rotate-2 hover:rotate-0 transition-transform duration-300 ml-4"
              >
                <img
                  alt="Speaker"
                  class="w-full h-full object-cover"
                  src="/images/speakers/av.jpg"
                />
              </div>
              <div
                class="w-24 h-24 rounded-2xl overflow-hidden shadow-lg transform rotate-6 hover:rotate-0 transition-transform duration-300"
              >
                <img
                  alt="Speaker"
                  class="w-full h-full object-cover"
                  src="/images/speakers/sp.jpg"
                />
              </div>
            </div>
            <div class="flex flex-col gap-4 justify-center">
              <div
                class="w-28 h-28 rounded-full overflow-hidden shadow-xl transform -rotate-3 hover:rotate-0 transition-transform duration-300 z-10"
              >
                <img
                  alt="Speaker"
                  class="w-full h-full object-cover"
                  src="/images/speakers/ss.jpg"
                />
              </div>
              <div
                class="w-28 h-28 rounded-2xl overflow-hidden shadow-xl transform rotate-2 hover:rotate-0 transition-transform duration-300 z-10 -ml-2"
              >
                <img
                  alt="Speaker"
                  class="w-full h-full object-cover"
                  src="/images/speakers/ma.jpg"
                />
              </div>
              <div
                class="w-24 h-24 rounded-full overflow-hidden shadow-lg transform -rotate-2 hover:rotate-0 transition-transform duration-300 mt-2"
              >
                <img
                  alt="Speaker"
                  class="w-full h-full object-cover"
                  src="/images/speakers/da.jpg"
                />
              </div>
            </div>
            <div class="flex flex-col gap-4 pt-8">
              <div
                class="w-24 h-24 rounded-2xl overflow-hidden shadow-lg transform rotate-2 hover:rotate-0 transition-transform duration-300"
              >
                <img
                  alt="Speaker"
                  class="w-full h-full object-cover"
                  src="/images/speakers/da2.jpg"
                />
              </div>
              <div
                class="w-24 h-24 rounded-full overflow-hidden shadow-lg transform -rotate-3 hover:rotate-0 transition-transform duration-300 -ml-2"
              >
                <img
                  alt="Speaker"
                  class="w-full h-full object-cover"
                  src="/images/speakers/jma.jpg"
                />
              </div>
              <div
                class="w-20 h-20 rounded-2xl overflow-hidden shadow-lg transform rotate-6 hover:rotate-0 transition-transform duration-300 mt-4 ml-2"
              >
                <img
                  alt="Speaker"
                  class="w-full h-full object-cover"
                  src="/images/speakers/do.jpg"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
