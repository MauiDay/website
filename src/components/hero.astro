---
import loadConfig from '../configLoader';

const config = await loadConfig();

const { ticketUrl, headline, hasCfs, badge } = config;
---

<section
  class="relative bg-cover bg-center hero h-full"
> 

  <div class="absolute inset-0 bg-black/50"></div>
  <div
    class="absolute inset-0 z-0"
    style={{
      background: "radial-gradient(125% 125% at 50% 10%, transparent 40%, #C93CAD77 100%)",
    }}
  />
  <div
    class="absolute inset-0 z-0"
    style={{
      backgroundImage: `
        linear-gradient(to right, #e7e5e411 1px, transparent 1px),
        linear-gradient(to bottom, #e7e5e411 1px, transparent 1px)
      `,
      backgroundSize: "20px 20px",
      backgroundPosition: "0 0, 0 0",
      maskImage: `
        repeating-linear-gradient(
          to right,
          black 0px,
          black 3px,
          transparent 3px,
          transparent 8px
        ),
        repeating-linear-gradient(
          to bottom,
          black 0px,
          black 3px,
          transparent 3px,
          transparent 8px
        )
      `,
      WebkitMaskImage: `
        repeating-linear-gradient(
          to right,
          black 0px,
          black 3px,
          transparent 3px,
          transparent 8px
        ),
        repeating-linear-gradient(
          to bottom,
          black 0px,
          black 3px,
          transparent 3px,
          transparent 8px
        )
      `,
      maskComposite: "intersect",
      WebkitMaskComposite: "source-in",
    }}
  />

  <div class="container z-100 relative max-w-4xl mx-auto px-8 py-40 flex flex-col items-center h-full">
   
    <img class="size-40 mb-10" src={`/images/editions/${badge}`} alt="MAUI Day Logo" />

    <div class="inline-flex items-center gap-3 px-4 py-2 rounded-full border border-purple-500/30 bg-purple-900/20 backdrop-blur-sm mb-6">
    <span class="relative flex h-3 w-3">
    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-pink-400 opacity-75"></span>
    <span class="relative inline-flex rounded-full h-3 w-3 bg-pink-500"></span>
    </span>
    <span class="text-sm font-semibold tracking-widest uppercase text-pink-300">{headline}</span>
    </div>
    
    <h1
      class="text-white text-center text-4xl md:text-5xl uppercase font-header font-bold mb-4"
    >
      The Conference with a Focus on .NET MAUI üèùÔ∏è
    </h1>
    <p class="text-white text-lg mt-6 text-center mb-12">
      MAUI Day is a one-day, in-person event filled with sessions that have to
      do with cross-platform development using, you guessed it, .NET MAUI. Its also free! Speakers 
      from all around the world will be there to present about the
      latest and greatest in the .NET MAUI ecosystem, as well as being in the
      ‚Äúhallway track‚Äù so you can talk to them, discuss and ask questions.
    </p>
    <div class="flex space-x-4">

      <a href={`${ticketUrl}`}
        target="_blank"
        class="btn-gradient px-8 py-4 rounded-full font-bold text-white shadow-lg shadow-pink-500/30 hover:shadow-pink-500/50 transform hover:-translate-y-0.5 transition-all duration-300 min-w-[200px] flex items-center justify-center gap-2 group">
      <span>Get a Ticket</span>
        <span class="text-sm group-hover:translate-x-1 transition-transform">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-6" viewBox="0 0 24 24"><g fill="none"><path d="M24 0v24H0V0zM12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035q-.016-.005-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427q-.004-.016-.017-.018m.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093q.019.005.029-.008l.004-.014l-.034-.614q-.005-.019-.02-.022m-.715.002a.02.02 0 0 0-.027.006l-.006.014l-.034.614q.001.018.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01z"/><path fill="currentColor" d="m15.06 5.283l5.657 5.657a1.5 1.5 0 0 1 0 2.12l-5.656 5.658a1.5 1.5 0 0 1-2.122-2.122l3.096-3.096H4.5a1.5 1.5 0 0 1 0-3h11.535L12.94 7.404a1.5 1.5 0 0 1 2.122-2.121Z"/></g></svg>
        </span>
      </a>
      {!hasCfs ? (
      <>
       {config.hasAnnouncedSpeakers ? (   
        <a href="/#speakers" class="px-8 py-4 rounded-full font-bold text-white border-2 border-white/20 hover:border-white hover:bg-white/5 transition-all duration-300 min-w-[200px] flex items-center justify-center gap-2">
        <span class="text-xl">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-6" viewBox="0 0 24 24"><g fill="none"><path d="m12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035q-.016-.005-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427q-.004-.016-.017-.018m.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093q.019.005.029-.008l.004-.014l-.034-.614q-.005-.018-.02-.022m-.715.002a.02.02 0 0 0-.027.006l-.006.014l-.034.614q.001.018.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01z"/><path fill="currentColor" d="M4.1 6H8a1 1 0 0 1 0 2H4v3h4a1 1 0 1 1 0 2H4a5 5 0 0 0 5 5h2v2H9a1 1 0 1 0 0 2h6a1 1 0 1 0 0-2h-2v-2h2a5 5 0 0 0 5-5h-4a1 1 0 1 1 0-2h4V8h-4a1 1 0 1 1 0-2h3.9A5 5 0 0 0 15 2H9a5 5 0 0 0-4.9 4"/></g></svg>
        </span>
        <span>View Speakers</span>
        </a>
       ) : <></> }
      </>
      ) : ( 
      <>
      <a href="/#call-for-speakers" class="px-8 py-4 rounded-full font-bold text-white border-2 border-white/20 hover:border-white hover:bg-white/5 transition-all duration-300 min-w-[200px] flex items-center justify-center gap-2">
        <span class="text-xl">
          <svg xmlns="http://www.w3.org/2000/svg" class="size-6" viewBox="0 0 24 24"><g fill="none"><path d="m12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035q-.016-.005-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427q-.004-.016-.017-.018m.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093q.019.005.029-.008l.004-.014l-.034-.614q-.005-.018-.02-.022m-.715.002a.02.02 0 0 0-.027.006l-.006.014l-.034.614q.001.018.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01z"/><path fill="currentColor" d="M4.1 6H8a1 1 0 0 1 0 2H4v3h4a1 1 0 1 1 0 2H4a5 5 0 0 0 5 5h2v2H9a1 1 0 1 0 0 2h6a1 1 0 1 0 0-2h-2v-2h2a5 5 0 0 0 5-5h-4a1 1 0 1 1 0-2h4V8h-4a1 1 0 1 1 0-2h3.9A5 5 0 0 0 15 2H9a5 5 0 0 0-4.9 4"/></g></svg>
        </span>
        <span>Submit a Talk</span>
        </a>  
        </> )}
    </div>
  </div>
</section>
